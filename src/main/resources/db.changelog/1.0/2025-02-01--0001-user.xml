<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2025-02-01--0001-user" author="agavrilov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>
        
        <createTable tableName="user">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(20)">
                <constraints nullable="false" foreignKeyName="fk_access" referencedTableName="access"
                             referencedColumnNames="role"/>
            </column>
            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_info" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="biography" type="VARCHAR(100)"/>
            <column name="photo" type="VARCHAR(200)"/>
            <column name="status" type="VARCHAR(200)">
                <constraints foreignKeyName="fk_volunteer_center" referencedTableName="volunteer_center"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

    </changeSet>


</databaseChangeLog>