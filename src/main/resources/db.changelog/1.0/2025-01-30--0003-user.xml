<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">



    <changeSet id="db.changelog/1.0/2025-01-30--0003-user" author="mabubakirova">
        <preConditions>
            <not>
                <tableExists tableName="user"/>

            </not>
        </preConditions>
        <createTable tableName="user">

            <column name = "id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="active" type="BOOL">
                <constraints nullable="false"/>
            </column>

            <column name="mail" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="phone" type="VARCHAR(255)">
                <constraints nullable="true" unique="true"/>
            </column>

            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="photo_url" type="VARCHAR(100)"/>
            <column name="center_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_volunteer_centers" referencedTableName="volunteer_centers"
                referencedColumnNames="id" unique="false"/>
            </column>

        </createTable>

    </changeSet>
</databaseChangeLog>