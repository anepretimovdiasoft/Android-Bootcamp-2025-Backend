<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20250202-t_records" author="sidorova">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="t_records"/>
            </not>
        </preConditions>

        <createTable tableName="t_records">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_record" referencedTableName="t_users"
                             referencedColumnNames="id"/>
            </column>
            <column name="center_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_center_record" referencedTableName="t_center"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>