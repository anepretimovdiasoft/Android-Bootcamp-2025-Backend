<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2025-01-31-0001-volunteercenters" author="gnazarov">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="volunteercenters"/>
            </not>
        </preConditions>

        <createTable tableName="volunteercenters">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="centername" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="coordinates" type="varchar(100)">
                <constraints unique="true" nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>
