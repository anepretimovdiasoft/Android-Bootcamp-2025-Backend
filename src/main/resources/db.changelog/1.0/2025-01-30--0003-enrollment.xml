<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2025-01-30--0003-enrollment" author="nzhavoronkov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="enrollment"/>
            </not>
        </preConditions>

        <createTable tableName="enrollment">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="center_id"  type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_enrollment_center" referencedTableName="center"
                referencedColumnNames="id"/>
            </column>
            <column name="user_id"  type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_enrollment_user" referencedTableName="user"
                             referencedColumnNames="id"/>
            </column>
            <column name="joined_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>