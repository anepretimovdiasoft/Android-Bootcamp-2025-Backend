<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog-ext.xsd">

    <changeSet id="2025-01-30-0001-volunteercentre" author="dshilyaev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="volunteer"/>
            </not>
        </preConditions>
        <createTable tableName="volunteer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="Name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="Description" type="VARCHAR(1000)">
                <constraints nullable="true"/>
            </column>
            <column name="Coordinate_x" type="FLOAT">
                <constraints nullable="false"/>
            </column>
            <column name="Coordinate_y" type="FLOAT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>