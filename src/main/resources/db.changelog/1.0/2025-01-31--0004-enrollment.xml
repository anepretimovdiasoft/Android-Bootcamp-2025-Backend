<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2025-01-31--0004-enrollment" author="mprokhorov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="Enrollment"/>
            </not>
        </preConditions>

        <createTable tableName="Enrollment">
            <column name="UserId" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_Enrollment_Users" referencedTableName="Users"
                             referencedColumnNames="Id"/>
            </column>

            <column name="CenterId" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_Enrollment_VolunteerCenter" referencedTableName="VolunteersCenters"
                             referencedColumnNames="Id"/>
            </column>

            <column name="ContactId" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_Enrollment_Contacts" referencedTableName="Contacts"
                             referencedColumnNames="Id"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>