<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="db.changelog/1.0/2025-01-30--0003-user_volunteer_centers.xml" author="mabubakirova">
        <preConditions>
            <not>
                <tableExists tableName="user_volunteer_centers"/>
            </not>
        </preConditions>

        <createTable tableName="user_volunteer_centers">

                <column name = "id" type="BIGINT" autoIncrement="true">
                    <constraints primaryKey="true" nullable="false"/>

            </column>

            <column name="user_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_user_volunteer_centers_volunteer" referencedTableName="volunteer"
                             referencedColumnNames="id"/>
            </column>

            <column name="center_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_user_volunteer_centers_volunteer_centers" referencedTableName="volunteer_centers"
                             referencedColumnNames="id"/>

            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>