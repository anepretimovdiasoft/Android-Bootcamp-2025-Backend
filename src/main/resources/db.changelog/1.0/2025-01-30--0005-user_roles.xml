<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">



    <changeSet id="2025-01-30--0005-user_roles" author="mabubakirova">
        <preConditions>
            <not>
                <tableExists tableName="user_roles"/>

            </not>
        </preConditions>

        <createTable tableName="user_roles">

            <column name = "id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_volrol_user" referencedTableName="user"
                             referencedColumnNames="id" />
            </column>

            <column name="roles_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_volrol_roles" referencedTableName="roles"
                             referencedColumnNames="id" />
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>