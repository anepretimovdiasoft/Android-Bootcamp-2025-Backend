<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="2025-02-06--0006-user_authorities" author="mprokhorov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_authorities"/>
            </not>
        </preConditions>

        <createTable tableName="user_authorities">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_userauth_user" referencedTableName="user"
                             referencedColumnNames="id"/>
            </column>
            <column name="authorities_id" type="varchar(30)">
                <constraints nullable="false" foreignKeyName="fk_userauth_authority" referencedTableName="authority"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>