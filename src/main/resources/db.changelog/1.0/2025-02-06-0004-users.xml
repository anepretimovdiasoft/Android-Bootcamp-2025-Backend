<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="2025-02-06-0004-users" author="mprokhorov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>
        
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="true" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="second_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="varchar(30)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="info" type="varchar(300)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_users_contact" referencedTableName="contact"
                             referencedColumnNames="id"/>
            </column>
            <column name="organization_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_users_organization" referencedTableName="organization"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>