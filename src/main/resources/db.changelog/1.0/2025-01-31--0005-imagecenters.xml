<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2025-01-31--0005-imagecenters" author="mprokhorov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ImageCenters"/>
            </not>
        </preConditions>

        <createTable tableName="ImageCenters">
            <column name="Id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_ImageCenters_VolunteerCenters" referencedTableName="VolunteersCenters"
                             referencedColumnNames="ImageId"/>
            </column>

            <column name="LinkImage" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>