<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2025-01-29--0006-related_volunteer" author="Petr Rudichev">
        <preConditions>
            <not>
                <tableExists tableName="related_volunteer"/>
            </not>
        </preConditions>

        <createTable tableName="related_volunteer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>

            <column name="volunteer_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" foreignKeyName="fk_related_volunteer_volunteer"
                             referencedTableName="volunteer" referencedColumnNames="id" deleteCascade="true"/>
            </column>

            <column name="areas_activity_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_related_volunteer_areas_activity"
                             referencedTableName="areas_activity" referencedColumnNames="id" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>