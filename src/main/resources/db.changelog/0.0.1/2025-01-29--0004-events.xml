<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="2025-01-29--0004-events" author="Petr Rudichev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="events"/>
            </not>
        </preConditions>
        
        <createTable tableName="events">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(300)"/>
            <column name="image_link" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(300)"> 
                <constraints nullable="false"/> 
            </column>
            <column name="latitude" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="center_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_events_center" referencedTableName="center"
                             referencedColumnNames="id" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>